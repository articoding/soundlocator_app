<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SoundApp</name>
    <description>Sound Library (with FreeSound API)</description>
    <author href="https://cordova.apache.org">
        Equipo SoundApp
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <icon src="www/public/img/logo-soundapp.png" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <splash density="xxhdpi" platform="android" src="package-assets/Default@2x~universal~anyany.png"></splash>
</widget>
